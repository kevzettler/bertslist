  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="/">Bertslist</a>
      <div class="nav-collapse collapse">
          <ul class="nav">
              <% if current_user %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
