<h1>Pets Near You That Need Help</h1>

<% @pets.each do |pet| %>

<div class="pet_cell">
  <% if pet.pet_images.count > 0 %>
   <img src="<%= pet.pet_images.first.photo.url(:thumb) %>" alt="<%= pet.name %>" height="50" width="50"/>
  <% end %>
  <h2><%= pet.name %></h2>
  <span><%= pet.age %></span>
  <p><%= pet.notes %></p>
