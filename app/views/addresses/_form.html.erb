<%= form_for(@address) do |f| %>

<div class="field">
  <%= f.label :name, "Organization Name" %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :line1, "Address Line 1" %>
  <%= f.text_field :line1 %>
</div>

<div class="field">
  <%= f.label :line2, "Address Line 2" %>
  <%= f.text_field :line2 %>
</div>

<div class="field">
  <%= f.label :city %>
  <%= f.text_field :city %>
</div>

<div class="field">
  <%= f.label :state %>
  <select name="address[state]">
    <% ::Bertslist::Geo::States.each do |state| %>
    <option value="<%= state[1] %>"><%= state[0] %></option>
    <% end %>
  </select>
</div>

<div class="field">
  <%= f.label :zip %>
  <%= f.text_field :zip %>
</div>

<div class="field">
  <%= f.label :phone %>
  <%= f.text_field :phone %>
</div>

<div class="field">
  <%= f.submit "Submit", :class => "btn btn-success" %>
</div>



<% end %>
