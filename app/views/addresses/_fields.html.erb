<div class="field">
  <%= f.label :line1, "Address Line 1" %>
  <%= f.text_field :line1, :class =>"validate[required]" %>
</div>

<div class="field">
  <%= f.label :line2, "Address Line 2 ( optional )" %>
  <%= f.text_field :line2 %>
</div>

<div class="field">
  <%= f.label :city %>
  <%= f.text_field :city, :class =>"validate[required]" %>
</div>

<div class="field">
  <%= f.label :state %>
  <select name="address[state]" class="validate[required]">
    <% ::Bertslist::Geo::States.each do |state| %>
    <option value="<%= state[1] %>"><%= state[0] %></option>
    <% end %>
  </select>
</div>

<div class="field">
  <%= f.label :zip %>
  <%= f.text_field :zip, :class =>"validate[required]" %>
</div>
