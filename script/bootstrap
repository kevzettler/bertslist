#1/bin/bash
DEPENDENCIES=""

if ! ls ./config/database.yml &>/dev/null; then
	echo "you need to create ./config/database.yml with appropriate settings before continuing"
	exit 1
fi

bundle install
rake db:drop db:create db:migrate
replicate -r ./config/environment -l < ./db/replicate/pet.dump
echo "bertslist is bootstrapped. to run type bundle exec rails s"