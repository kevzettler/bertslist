source 'https://rubygems.org'

gem 'rails', '3.2.11'
gem 'thin'

gem 'pg'

# Auth
gem 'devise'
gem 'omniauth-facebook'

gem 'newrelic_rpm'

# Gems used only for assets and not required
# in production environments by default.
 gem 'sass', '~> 3.1.0'
 gem 'sass-rails',   '~> 3.2.3'        
group :assets do
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
    gem 'guard'
    gem 'guard-resque'
    gem 'rb-fsevent', '~> 0.9'
end

# Photo uploads
gem "paperclip", :git => "git://github.com/thoughtbot/paperclip.git"
gem "aws-sdk"
gem 'jquery-rails'
gem "jquery-fileupload-rails", '0.3.4'

gem 'acts-as-taggable-on', '~> 2.3.1'

# DB cloning and replication
gem 'heroku'
gem 'taps'
gem 'replicate'

# Static Content
gem 'jekyll'

# Work
gem 'resque', "~> 1.22.0"
gem 'capybara', :require => false

# Security
gem 'encryptor', :require => false

